<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="276dp"
    android:layout_height="145dp"
    android:background="#acacac"
    android:layout_centerInParent="true"
    tools:context="pickture.sopt20th.com.pickutre.Dialog.AddPhotoDialog">

    <LinearLayout
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="138dp"
            android:layout_height="30dp"
            android:text="사진 첨부하기"
            android:textSize="22sp"
            android:textColor="#282828"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="23dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="26dp">
            <Button
                android:id="@+id/aapd_gallery_btn"
                android:layout_width="112dp"
                android:layout_height="42dp"
                android:layout_weight="0.5"
                android:text="Gallery"
                android:textSize="12sp"
                android:textColor="#b6b6b6"
                android:gravity="center"
                android:background="#282828"
                android:onClick="loadImagefromGallery"/>
            <Button
                android:id="@+id/aapd_mypick_btn"
                android:layout_width="112dp"
                android:layout_height="42dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:text="My Pick"
                android:textSize="12sp"
                android:textColor="#b6b6b6"
                android:gravity="center"
                android:background="#282828"
                android:onClick="loadImagefromMyPick"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
