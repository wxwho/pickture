<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pickture.sopt20th.com.pickutre.Activity.EstimateDetailActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:src="@drawable/sendbox_txt"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="#282828">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/sendrequest_white"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"></ImageView>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/aed_profile"
            app:civ_border_width="0dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="19dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile2"/>
        <TextView
            android:id="@+id/aed_photographer_id_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="BesideUsnap"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


    <include layout="@layout/activity_estimate_detail2"></include>


</LinearLayout>