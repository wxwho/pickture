<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="pickture.sopt20th.com.pickutre.Activity.LoginActivity">

    <ImageView
        android:layout_width="232dp"
        android:layout_height="60.7dp"
        android:src="@drawable/logo_yellow_yellow"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="53dp"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/user"/>

        <EditText
            android:layout_width="158.58dp"
            android:layout_height="wrap_content"
            android:id="@+id/al_id_edit"
            android:layout_marginLeft="9dp"
            android:hint="Username"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:background="@drawable/edit_bottom_line_for_login_and_sign_up"
            android:singleLine="true"
            android:text="android"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="27dp">

        <ImageView
            android:layout_width="19.17dp"
            android:layout_height="23.01dp"
            android:src="@drawable/lock"/>

        <EditText
            android:layout_width="158.58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:id="@+id/al_pw_edit"
            android:hint="Password"
            android:textColorHint="#FFFFFF"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/edit_bottom_line_for_login_and_sign_up"
            android:password="true"
            android:singleLine="true"
            android:text="123"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/al_loginbtn"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="37dp"
        android:background="@drawable/button_login"
        android:gravity="center_horizontal"
        android:paddingTop="17dp"
        android:text="Login"
        android:textColor="#282828"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_facebook"
        android:gravity="center_horizontal"
        android:onClick="facebookLoginOnClick"
        android:paddingLeft="15dp"
        android:paddingTop="17dp"
        android:text="Login with Facebook"
        android:textColor="#ffffff"
        android:textSize="11sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="41dp"
        android:layout_height="15dp"
        android:src="@drawable/sign_up"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="11dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/al_public_signup"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:background="@android:color/transparent"
            android:src="@drawable/user_box" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:src="@drawable/photographer_box"
            android:id="@+id/al_photographer_signup"
            android:layout_marginLeft="12dp"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>