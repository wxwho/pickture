<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pickture.sopt20th.com.pickutre.Activity.MakeReviewActivity"> <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:src="@drawable/review_txt"
        android:layout_gravity="center" />

</android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="#282828">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/amr_photographer_profile"
            app:civ_border_width="0dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="23dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/temp_photograper_profile"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/amr_photographer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="29dp"
        android:text="리뷰 작성하기"
        android:textColor="#282828"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <RatingBar
        android:id="@+id/amr_ratingbar"
        style="@style/CustomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="left"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="23dp"
        android:stepSize="1" />

    <EditText
        android:id="@+id/amr_review_content_edit"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/border_for_edit"
        android:layout_marginTop="22dp"
        android:hint="리뷰를 작성해주세요"
        android:textSize="12sp"
        android:gravity="top"
        android:textColorHint="#828282"
        android:paddingTop="18dp"
        android:paddingLeft="15dp"/>

    <Button
        android:id="@+id/amr_reivew_btn"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/review_yellowbox"
        android:text="리뷰 등록하기"
        android:textColor="#282828"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingLeft="56dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal" />



</LinearLayout>
