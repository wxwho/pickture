<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pickture.sopt20th.com.pickutre.Activity.CategoryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:src="@drawable/model_txt"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="#282828">
        <LinearLayout
            android:layout_width="51dp"
            android:layout_height="42dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                app:civ_border_width="0dp"
                android:id="@+id/ama_profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/profile2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="231dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="9dp">

            <TextView
                android:id="@+id/ama_pg_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YulkSnap"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/ama_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="커플 모델 구인합니다"
                android:textColor="#D4D4D4D4"
                android:textSize="10sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <Button
            android:id="@+id/ama_finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="완료"
            android:textColor="@color/mainYellow"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모델 지원 하기"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#282828"
            android:layout_marginLeft="1dp"/>


        <EditText
            android:id="@+id/ama_introduce_edit"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:background="@drawable/border_for_edit"
            android:layout_marginTop="10dp"
            android:hint="내용을 입력하세요.(자기소개, 프로필 등)"
            android:textSize="12sp"
            android:gravity="top"
            android:textColorHint="#828282"
            android:paddingTop="14dp"
            android:paddingLeft="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연락처"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#282828"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/ama_contact_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/border_for_edit"
            android:layout_marginTop="10dp"
            android:hint="연락가능한 연락처를 기입해주세요"
            android:textSize="12sp"
            android:textColorHint="#828282"
            android:padding="10dp"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="33dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참고 사진 첨부"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#282828"
                android:layout_marginLeft="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(참고할 수 있는 본인의 사진을 첨부해주세요)"
                android:textSize="10sp"
                android:textColor="#828282" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ama_add_photo_img1"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:background="@drawable/reference_image"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/ama_add_photo_img2"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/reference_image"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/ama_add_photo_img3"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/reference_image"
                android:scaleType="centerCrop"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>