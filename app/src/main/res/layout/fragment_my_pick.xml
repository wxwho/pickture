<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pickture.sopt20th.com.pickutre.MainFragment.MyPickFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!--버튼이 눌릴때 글씨체 두껍게, 배경 검은색으로 변해야 한다. -->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PHOTOGRAPHER"
            android:textSize="13sp"
            android:background="#e9e9e9"
            android:textColor="#A5A5A5"
            android:textStyle="bold"
            android:id="@+id/fm_pg_btn"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PHOTO"
            android:textSize="13sp"
            android:background="#e9e9e9"
            android:textColor="#A5A5A5"
            android:textStyle="bold"
            android:id="@+id/fm_photo_btn"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mypick_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>
